{
  "name": "zeroday",
  "version": "1.0.0",
  "description": "CVE Vulnerability Tracker",
  "scripts": {
    "mongo:start": "brew services start mongodb-community@7.0",
    "mongo:stop": "brew services stop mongodb-community@7.0",
    "mongo:restart": "brew services restart mongodb-community@7.0",
    "mongo:status": "brew services list | grep mongodb",
    "backend": "cd backend && npm run dev",
    "frontend": "cd frontend && npm start",
    "dev": "npm run mongo:start && concurrently \"npm run backend\" \"npm run frontend\"",
    "stop": "npm run mongo:stop"
  },
  "dependencies": {
    "concurrently": "^9.2.1"
  }
}
